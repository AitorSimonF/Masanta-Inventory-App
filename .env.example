# --------------------------------------------------------
# .env.example
# Template for environment variables
#
# Copy this file â†’ rename to ".env"
# Fill in your real credentials
#
# IMPORTANT:
# Never commit your real .env file to GitHub.
# --------------------------------------------------------

# -----------------------
# QuickBooks API Settings
# -----------------------

# OAuth2 client ID from your QB developer app
QB_CLIENT_ID = your_client_id_here

# OAuth2 secret ly - treat this like a password
QB_CLIENT_SECRET = your_client_secret_here

# URL QuickBooks redirects to after authentication
QB_REDIRECT_URI = http://localhost:8000/callback


# Use "sandbox" for testing, "production" for your real account
QB_ENVIRONMENT = sandbox

# Company /Realm ID (appears in your QuickBooks account)
QB_REALM_ID = your_company_id_here


# -----------------------
# Database Configuration
# -----------------------


# sqlite = local file-based DB (easy for development)
DB_TYPE = sqlite

# Optionally use PostgreSQL instead (uncomment to activate)
# DB_URL = postgresql://user:password@localhost/masanta_db


# -----------------------
# Notification Settings (future feature)
# -----------------------

# Enable email alerts? true/false
ENABLE_NOTIFICATIONS=false

# Where alerts should be sent
NOTIFICATION_EMAIL=your_email@example.com


# -----------------------
# Logging Settings
# -----------------------


# INFO = normal logs
# DEBUG = detailed developer logs
# ERROR = only show errors
LOG_LEVEL=INFO
